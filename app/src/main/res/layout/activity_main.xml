<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Parent_View"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/darling_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Darlings"
        android:textSize="30sp"
        android:textColor="#F44356"
        android:textStyle="italic"
        android:background="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/darling_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:columnCount="4"
        android:useDefaultMargins="true">

        <Button
            android:id="@+id/Disha_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Disha"
                android:onClick="dishaBaby"/>

        <Button
            android:id="@+id/Anu_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"
            android:paddingRight="35dp"
            android:text="Anushka"
            android:onClick="AnuBaby"/>

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="Search"
        android:textSize="30dp"
        android:id="@+id/textView"
        android:layout_marginLeft="10dp"
        android:onClick="Search"/>

    <EditText
        android:id="@+id/Edit_search"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView" />

</RelativeLayout>
